@inherits SsoLayoutComponentBase
@inject I18n I18n

<CascadingValue Value="I18n">
<MApp>
    <MErrorHandler>
        <MAppBar Elevation=0 App MaxHeight=60>
            <MAppBarTitle Class="ml-4">Masa Sso</MAppBarTitle>
            <MSpacer></MSpacer>
            <AuthorizeView>
                <Authorized>
                    <MMenu Left
                           Bottom>
                        <ActivatorContent Context="menuContext">
                            <MButton Icon @attributes="@menuContext.Attrs">
                                <MIcon>mdi-account-circle-outline</MIcon>
                            </MButton>
                        </ActivatorContent>
                        <ChildContent>
                            <MList>
                                <MListItem Href="account/logout">
                                    <MListItemTitle>@T("Logout")</MListItemTitle>
                                </MListItem>
                            </MList>
                        </ChildContent>
                    </MMenu>
                </Authorized>
            </AuthorizeView>
        </MAppBar>
        <MMain Class="fill-lighten-1">
            @Body
        </MMain>
    </MErrorHandler>
</MApp>
</CascadingValue>