@inherits AdminCompontentBase

<MAutocomplete Value="Value"
               ValueChanged=ValueChanged
               Items="Teams"
               Outlined
               Height=55
               Chips
               Color="primary"
               Label="@("Team")"
               HideDetails="@("auto")"
               ItemText="t=>t.Name"
               ItemValue="t=>t.Id"
               Multiple>
    <SelectionContent Context="data">
        <MChip Close
               OnCloseClick="()=>Value.Remove(data.Item.Id)">
            <MAvatar Left>
                <img src="@data.Item.Avatar" />
            </MAvatar>
            @data.Item.Name
        </MChip>
    </SelectionContent>
    <ItemContent Context="data">
        <MListItemAvatar>
            <MAvatar>
                <img src="@data.Item.Avatar" />
            </MAvatar>           
        </MListItemAvatar>
        <MListItemContent>
            <MListItemTitle>
                @data.Item.Name
            </MListItemTitle>
        </MListItemContent>
    </ItemContent>
</MAutocomplete>