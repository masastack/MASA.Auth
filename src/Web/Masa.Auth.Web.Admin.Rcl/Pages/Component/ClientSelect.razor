@inherits AdminCompontentBase

<MAutocomplete Value="Value"
               ValueChanged="ValueChanged"
               Items="Clients"
               Color="primary"
               Label="@T("Client")"
               ItemText="client => client.ClientName"
               ItemValue="client => client.Id"
               Outlined
               HideDetails="@("auto")"
               Style="@($"{Style}")"
               Class="@($"{Class}")">
    <PrependInnerContent>
        <MIcon Size=16 Class="mr-2 neutral-lighten-1--text">mdi-magnify</MIcon>
    </PrependInnerContent>
    <ItemContent Context="data">
        <div class="d-flex" style="height:48px;">
            <MAvatar Size=30 Class="ma-auto">
                <img src="@data.Item.LogoUri" />
            </MAvatar>
            <span class="text-btn neutral-lighten-1--text ml-2">@data.Item.ClientName</span>            
        </div>
    </ItemContent>
</MAutocomplete>