@inherits AdminCompontentBase

@foreach (var identityResourceChunk in IdentityResourceChunks)
{
    <MRow Class="mb-2 mt-0">
        @foreach (var identityResource in identityResourceChunk)
        {
            <MCol Cols="12/Chunk" Class="py-0">
                <SCheckbox TValue="bool" Value="Value.Contains(identityResource.Id)" ValueChanged="value => OnValueChanged(value,identityResource.Id)" Label="@identityResource.Name"></SCheckbox>
            </MCol>
        }
    </MRow>
}
