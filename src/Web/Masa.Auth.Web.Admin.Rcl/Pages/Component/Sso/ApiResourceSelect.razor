@inherits AdminCompontentBase

@foreach (var apiResourceChunk in ApiResourceChunks)
{
    <MRow Class="mb-2 mt-0">
        @foreach (var apiResource in apiResourceChunk)
        {
            <MCol Cols="12/Chunk" Class="py-0">
                <SCheckbox TValue="bool" Value="Value.Contains(apiResource.Id)" ValueChanged="value => OnValueChanged(value,apiResource.Id)" Label="@apiResource.Name"></SCheckbox>
            </MCol>
        }
    </MRow>
}

