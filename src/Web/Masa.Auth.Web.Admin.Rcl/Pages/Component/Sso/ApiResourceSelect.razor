@namespace Masa.Auth.Web.Admin.Rcl.Pages.Component
@inherits AdminCompontentBase

<div class="overflow-y full-height @Class" style="@Style">
    @foreach (var apiResourceChunk in ApiResourceChunks)
    {
        <MRow>
            @foreach (var apiResource in apiResourceChunk)
            {
                <MCol Cols="12/Chunk" Class="py-0">
                    <MCheckbox Value="Value.Contains(apiResource.Id)" ValueChanged="value => OnValueChanged(value,apiResource.Id)" Label="@apiResource.Name"></MCheckbox>
                </MCol>
            }
        </MRow>
    }
</div>
