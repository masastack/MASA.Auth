@inherits AdminCompontentBase

@foreach (var userClaimChunk in UserClaimChunks)
{
    <MRow Class="@($"mb-2 mt-0 {Class}")">
        @foreach (var userClaim in userClaimChunk)
        {
            <MCol Cols="12/Chunk" Class="py-0">
                <MCheckbox Value="Value.Contains(userClaim.Id)" ValueChanged="value => OnValueChanged(value,userClaim.Id)" HideDetails="@("auto")" Label="@userClaim.Name"></MCheckbox>
            </MCol>
        }
    </MRow>
}

