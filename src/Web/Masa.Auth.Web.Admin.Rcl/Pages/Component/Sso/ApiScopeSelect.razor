@inherits AdminCompontentBase

@foreach (var apiScopeChunk in ApiScopeChunks)
{
    <MRow Class="mb-2 mt-0">
        @foreach (var apiScope in apiScopeChunk)
        {
            <MCol Cols="12/Chunk" Class="py-0">
                <MCheckbox Value="Value.Contains(apiScope.Id)" ValueChanged="value => OnValueChanged(value,apiScope.Id)" Label="@apiScope.Name"></MCheckbox>
            </MCol>
        }
    </MRow>
}
