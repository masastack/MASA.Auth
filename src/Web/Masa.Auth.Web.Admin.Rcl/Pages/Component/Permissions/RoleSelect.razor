@inherits AdminCompontentBase

<MAutocomplete Value="Value"
               ValueChanged=UpdateValueAsync
               TItem="RoleSelectDto"
               TValue="List<Guid>"
               TItemValue="Guid"
               Items="Roles"
               Outlined
               Chips
               Dense
               Multiple
               Color="primary"
               Height="48"
               Disabled=Readonly
               Label="@Label"
               HideDetails="@("auto")"
               ItemText="t=>t.Name"
               ItemValue="t=>t.Id"
               Class="@Class"
               ItemDisabled="RoleDisabled">
    <SelectionContent Context="data">
        <MChip Close
               Style="height:28px;"
               OnCloseClick="()=>RemoveRole(data.Item)">
            <span class="body2 regular--text">
                @data.Item.Name
            </span>
        </MChip>
    </SelectionContent>
    <ItemContent Context="data">
        <MListItemContent>
            <MListItemTitle>
                <span class="body2 regular--text">
                    @data.Item.Name
                </span>
            </MListItemTitle>
        </MListItemContent>
    </ItemContent>
</MAutocomplete>
