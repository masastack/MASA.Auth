@inherits AdminCompontentBase

<div class="mt-5 d-flex">
    <div class="d-flex">
        <MSelect 
            Value=PageSize
            ValueChanged=PageSizeChanged
            Color="primary"
            Style="max-width:120px;"
            Dense   
            Outlined
            Items="@_pageSizeSelect"
            ItemText="p => p.ToString()"
            ItemValue="p => p"
            HideDetails="@("auto")"
            Class="rounded-2">
         </MSelect>
        <div class="ml-2 block-center text-caption2">@T("Rows per page")</div>
    </div>
    <div class="@Class ml-auto">
        <MIcon Class="hover-pointer" Size=24>mdi-chevron-left</MIcon>
        <span class="ma-5 text-caption">@((Page-1)* PageSize+1) to @(Page*PageSize) of @Total</span>
        <MIcon Class="hover-pointer" Size=24>mdi-chevron-right</MIcon>
    </div>
</div>

@code {
    [Parameter]
    public string Class { get; set; } = "";

    [Parameter]
    public int Page { get; set; }

    [Parameter]
    public EventCallback<int> PageChanged { get; set; }

    [Parameter]
    public int TotalPage { get; set; }

    [Parameter]
    public int PageSize { get; set; }

    [Parameter]
    public EventCallback<int> PageSizeChanged { get; set; }

    [Parameter]
    public long Total { get; set; }

    List<int> _pageSizeSelect = new() { 10, 25, 50, 100 };
}
