@inherits AdminCompontentBase

<MAutocomplete Value="Value"
               ValueChanged=ValueChanged
               Items="GetRoleSelect()"
               Outlined
               Height=55
               Chips
               Color="primary"
               Disabled=Readonly
               Label="@Lable"
               HideDetails="@("auto")"
               ItemText="t=>t.Name"
               ItemValue="t=>t.Id"
               Multiple
               Class="@Class">
    <SelectionContent Context="data">
        <MChip Close
               Disabled=Readonly
               OnCloseClick="()=>RemoveRole(data.Item)">
            @data.Item.Name
        </MChip>
    </SelectionContent>
    <ItemContent Context="data">
        <MListItemContent>
            <MListItemTitle>
                @data.Item.Name
            </MListItemTitle>
        </MListItemContent>
    </ItemContent>
</MAutocomplete>
