@inherits AdminCompontentBase

<MAutocomplete Value="Value"
               ValueChanged=ValueChanged
               Items="Roles"
               Outlined
               Height=55
               Chips
               Color="primary"
               Readonly=Readonly
               Label="@Lable"
               HideDetails="@("auto")"
               ItemText="t=>t.Name"
               ItemValue="t=>t.Id"
               Multiple>
    <SelectionContent Context="data">
        <MChip Close
               OnCloseClick="()=>Value.Remove(data.Item.Id)">
            @data.Item.Name
        </MChip>
    </SelectionContent>
    <ItemContent Context="data">
        <MListItemContent>
            <MListItemTitle>
                @data.Item.Name
            </MListItemTitle>
        </MListItemContent>
    </ItemContent>
</MAutocomplete>
