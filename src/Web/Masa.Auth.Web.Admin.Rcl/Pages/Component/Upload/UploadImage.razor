@namespace Masa.Auth.Web.Admin.Rcl.Pages.Component
@inherits Upload

<label class="uploadImage">
    <InputFile @ref="InputFileRef" OnChange=OnInputFileChange accept="@Accept" multiple=@Multiple />
    <div>
        @if (ChildContent is not null)
        {
            @ChildContent(PreviewImageUrls)
        }
        else
        {
            @if (PreviewImageUrls.Count == 0)
            {
                <img src="@Icon" class="@GetClass()" style="@GetStyle()" />
            }
            @foreach (var imageUrl in PreviewImageUrls)
            {
                <img src="@imageUrl" class="@GetClass()" style="@GetStyle()" />
            }
        }
    </div>
</label>
