@inherits AdminCompontentBase

<SSheetDialog @bind-Value=_visible Title="@T("Add Api Permission")">
    <MCard class="pt-9 d-flex flex-column full-height" Style="margin-left:228px;margin-right:228px;">
        <MCardText Class="full-height">
            <MForm Model=_apiPermissionDetailDto EnableValidation @ref="_form">
                <MRow>
                    <MCol Md=12>
                        <STextField Label="@T("Permission Name")" @bind-Value="_apiPermissionDetailDto.Name" />
                    </MCol>
                    <MCol Md=12>
                        <STextField Label="@T("Code")" Prefix="@($"{_apiPermissionDetailDto.AppId}.")" @bind-Value="_apiPermissionDetailDto.Code" Messages='new List<string>{"推荐Code方式，格式参考示例：resource.method"}' />
                    </MCol>
                    <MCol Md=12>
                        <SSelect @bind-Value="_apiPermissionDetailDto.Type"
                                 Label="@T("Permission Type")"
                                 Items="@_apiPermissionTypes"
                                 ItemText="u => u.Text"
                                 ItemValue="u => u.Value">
                        </SSelect>
                    </MCol>
                    <MCol Md=6>
                        <STextField Prefix="@_showUrlPrefix" Label="@T("Permission Url")" @bind-Value="_apiPermissionDetailDto.Url" />
                    </MCol>
                    <MCol Md=6>
                        <SNumberTextField Label="@T("Permission Order")" @bind-Value="_apiPermissionDetailDto.Order" />
                    </MCol>
                    <MCol Md=12>
                        <MTextarea class="mt-6" Label="@T("Description")" @bind-Value="_apiPermissionDetailDto.Description" Outlined Height="120" NoResize />
                    </MCol>
                </MRow>
            </MForm>
        </MCardText>
        <MCardActions class="d-flex align-center mb-12 px-6">
            <MSpacer />
            <SButton Medium OnClick="OnSubmitHandler">@T("Submit")</SButton>
        </MCardActions>
    </MCard>
</SSheetDialog>
