@using Masa.Auth.Web.Admin.Rcl.Pages.Subjects.Users.Model
@inherits AdminCompontentBase

<DefaultSheetDialog Value="Visible" ValueChanged=UpdateVisible Title="@T("Update Role")">
    <MForm Model="Role" EnableValidation EnableI18n>
        <AutoHeight Overflow AutoClass="mt-6">
            <HeaderContent>
                <div class="d-flex">
                    <div class="mx-auto">
                        <ButtonGroup @bind-Value="Tab" TValue="UpdateRoleTabs" />
                    </div>
                </div>
            </HeaderContent>
            <AutoHeightContent>
                <MWindow Value="Tab.ToString()" Class="full-height">
                    <MWindowItem Value="UpdateRoleTabs.BasicInformation.ToString()">
                        <DefaultTitle Class="mb-4">@T("Basic Information")</DefaultTitle>
                        <STextField @bind-Value="Role.Name" Class="mb-6" Label="@T("Name")" />
                        <STextField @bind-Value="Role.Limit" TValue="int" OnChange=LimitChanged Class="mb-6" Label="@T("Limit the number of bindings")" />
                        <RoleSelect Value="RoleDetail.ParentRoles" Class="mb-12" Readonly Label="@T("Superior Role")" />
                        <RoleOwner RoleId=RoleId Class="mb-12" />
                        <STextField @bind-Value="Role.Description" Class="mb-12" Label="@T("Description")" />
                        <Record Creator="@RoleDetail.Creator" CreationTime="@RoleDetail.CreationTime" Modifier="@RoleDetail.Modifier" ModificationTime="@RoleDetail.ModificationTime" />                      
                    </MWindowItem>
                    <MWindowItem Value="UpdateRoleTabs.Permission.ToString()">
                        <RoleSelectForRole RoleId=RoleId @bind-Value="Role.ChildrenRoles" Class="mb-6 mt-1" />
                        <div class="global-nav" style="display: flex;height: auto">
                            <PermissionExtensionConfigure 
                                Roles=Role.ChildrenRoles 
                                @bind-ExtensionValue=Role.Permissions
                                @bind-Preview=Preview
                                Style="max-height:calc(100vh - 345px);" />
                        </div>
                    </MWindowItem>
                </MWindow>
            </AutoHeightContent>
            <FooterContent>
                <div class="d-flex mt-6">
                    <EnableSwitch @bind-Value="Role.Enabled" />
                    <MSpacer></MSpacer>
                    <SButton Medium Outlined Class="mr-6" OnClick="() => Preview = true">@T("Preview")</SButton>
                    <SButton Medium OnClick="async () => await UpdateRoleAsync(context)">@T("Save")</SButton>
                </div>
            </FooterContent>
        </AutoHeight>
    </MForm>
</DefaultSheetDialog>