@page "/pages/authentication/forgot-password-v2"
@layout EmptyLayout

<MRow>
    <MCol Cols="8" Style="background-color: #f8f8f8; height:100vh;">
        <MContainer Class="text-h6">
            <MIcon Large Left Color="purple">fas fa-seedling</MIcon>
            Masa.Auth.Admin
        </MContainer>
        <MContainer Class="col-lg-7 mt-16">
            <MImage Class="" Src="/_content/Masa.Auth.Web.Admin.Rcl/img/auth/forgot-password-v2.9faba3c1.svg">
            </MImage>
        </MContainer>
    </MCol>

    <MCol Cols="4" Align="AlignTypes.Center" Style="background-color:white;">
        <Masa.Auth.Web.Admin.Rcl.Pages.Authentication.Components.ForgotPassword HideLogo
                                                   Elevation="0"
                                                   Width="500"
                                                   SignInRoute="/pages/authentication/login-v2"
                                                   SendResetClick="SendRest">

        </Masa.Auth.Web.Admin.Rcl.Pages.Authentication.Components.ForgotPassword>
    </MCol>
</MRow>

@code {
    [Inject]
    protected NavigationManager Navigation { get; set; } = default!;

    private void SendRest(MouseEventArgs args)
    {
        Navigation.NavigateTo(Navigation.BaseUri + "pages/authentication/reset-password-v2");
    }
}
