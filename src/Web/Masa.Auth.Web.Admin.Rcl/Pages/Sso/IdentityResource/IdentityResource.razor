@page "/sso/identityResource"
@inherits AdminCompontentBase

<PageTitle>
    @T("IdentityResource")
</PageTitle>

<DefaultCard>
    <AutoHeight>
        <HeaderContent>
            <div class="d-flex mb-6">
                <SearchTextField @bind-Value="Search" />
                <MSpacer />
                <DefaultButton Small OnClick="() => AddStandardIdentityResourcesAsync()">
                    <MIcon Size=18>@IconConstants.Setting</MIcon>
                    <span class="ml-2 btn">@T("Create standard identityResource")</span>
                </DefaultButton>
                <DefaultButton Small Class="ml-4" OnClick="() =>  OpenAddRoleDialog()">
                    <MIcon Size=18>@IconConstants.Add</MIcon>
                    <span class="ml-2 btn">@T("Add")</span>
                </DefaultButton>
            </div>
        </HeaderContent>
        <AutoHeightContent>
            <DefaultDataTable Headers="GetHeaders()" Items="IdentityResources" TItem="IdentityResourceDto" ItemsPerPage="PageSize">
                <HeaderColContent Context="header">
                    <span>@header.Text</span>
                </HeaderColContent>
                <ItemColContent>
                    @switch (context.Header.Value)
                    {
                        case nameof(IdentityResourceDto.Name):
                            <div class="hover-pointer" @onclick="()=> OpenUpdateRoleDialog(context.Item)">
                                <span>@context.Item.Name</span>
                            </div>
                            break;
                        case (nameof(IdentityResourceDto.DisplayName)):
                            <span>@context.Item.DisplayName</span>
                            break;
                        case nameof(IdentityResourceDto.Required):
                            <span>@(context.Item.Required ? T("Yes") : T("No"))</span>
                            break;
                        case (nameof(IdentityResourceDto.Description)):
                            <span>@context.Item.Description</span>
                            break;
                        case nameof(IdentityResourceDto.Enabled):
                            <EnableChip Value="@context.Item.Enabled" />
                            break;
                        case "Action":
                            <MIcon Size="20" OnClick="()=> OpenUpdateRoleDialog(context.Item)">@IconConstants.Update</MIcon>
                            <MIcon Size="20" Class="ml-6" OnClick="()=> OpenRemoveIdentityResourceDialog(context.Item)">@IconConstants.Remove</MIcon>
                            break;
                        default:
                            <span>@context.Value</span>
                            break;
                    }
                </ItemColContent>
            </DefaultDataTable>
        </AutoHeightContent>
        <FooterContent>
            <Pagination Class="mt-5" @bind-Page="Page" @bind-PageSize=PageSize Total=Total />
        </FooterContent>
    </AutoHeight>
</DefaultCard>

<AddIdentityResourceDialog @bind-Visible="AddIdentityResourceDialogVisible" OnSubmitSuccess=GetIdentityResourcesAsync />
<UpdateIdentityResourceDialog @bind-Visible="UpdateIdentityResourceDialogVisible" IdentityResourceId=CurrentIdentityResourceId OnSubmitSuccess=GetIdentityResourcesAsync />
