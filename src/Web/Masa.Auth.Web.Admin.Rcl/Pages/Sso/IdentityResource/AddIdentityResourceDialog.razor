@inherits AdminCompontentBase

<DefaultSheetDialog Value="Visible" ValueChanged=UpdateVisible Title="@T("Add IdentityResource")">
    <MForm Model=IdentityResource EnableValidation @ref="Form">
        <AutoHeight Overflow>
            <AutoHeightContent>
                <div class="subtitle2">@T("Basic Information")</div>
                <MRow Class="mt-4">
                    <MCol>
                        <DefaultTextField @bind-Value="IdentityResource.DisplayName" Label="@T("DisplayName")" />
                    </MCol>
                    <MCol>
                        <DefaultTextField @bind-Value="IdentityResource.Name" Label="@T("IdentityResource.Name")" />
                    </MCol>
                </MRow>
                <MRow Class="mt-1">
                    <MCol>
                        <DefaultTextField @bind-Value="IdentityResource.Description" Label="@T("Description")" />
                    </MCol>
                </MRow>
                <MRow Class="mt-1">
                    <MCol Class="d-flex">
                        <MCheckbox @bind-Value="IdentityResource.Required" Class="pt-0 mt-0" Label="@T(nameof(IdentityResource.Required))"></MCheckbox>
                        <MCheckbox @bind-Value="IdentityResource.Emphasize" Class="ml-12 pt-0 mt-0" Label="@T(nameof(IdentityResource.Emphasize))"></MCheckbox>
                        <MCheckbox @bind-Value="IdentityResource.ShowInDiscoveryDocument" Class="ml-12 pt-0 mt-0" Label="@T(nameof(IdentityResource.ShowInDiscoveryDocument))"></MCheckbox>
                    </MCol>
                </MRow>
                <div class="mt-6 subtitle2">@T("User Claims")</div>
                <UserClaimSelect @bind-Value=IdentityResource.UserClaims Class="mt-4" Style="height:65%!important" />
            </AutoHeightContent>
            <FooterContent>
                <div class="d-flex mt-6">
                    <EnableSwitch @bind-Value="IdentityResource.Enabled" />
                    <MSpacer></MSpacer>
                    <DefaultButton Medium OnClick="async () => await AddIdentityResourceAsync(context)">@T("Submit")</DefaultButton>
                </div>
            </FooterContent>
        </AutoHeight>       
    </MForm>
</DefaultSheetDialog>