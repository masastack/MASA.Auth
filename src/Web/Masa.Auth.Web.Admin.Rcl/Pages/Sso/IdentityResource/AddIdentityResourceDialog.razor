@inherits AdminCompontentBase

<SheetDialog Value="Visible" ValueChanged=UpdateVisible Title="@T("Add IdentityResource")">
    <MForm Model=IdentityResource EnableValidation @ref="Form">
        <div class="sheetDialogPadding full-height flex-column">
            <div class="flex-height-auto overflow-y mt-6">
                <div class="text-subtitle2">@T("Basic Information")</div>
                <MRow Class="mt-4">
                    <MCol>
                        <MTextField @bind-Value="IdentityResource.DisplayName" Label="@T("DisplayName")" HideDetails="@("auto")" Outlined />
                    </MCol>
                    <MCol>
                        <MTextField @bind-Value="IdentityResource.Name" Label="@T("IdentityResource.Name")" HideDetails="@("auto")" Outlined />
                    </MCol>
                </MRow>
                <MRow Class="mt-1">
                    <MCol>
                        <MTextField @bind-Value="IdentityResource.Description" Label="@T("Description")" HideDetails="@("auto")" Outlined />
                    </MCol>
                </MRow>
                <MRow Class="mt-1">
                    <MCol>
                        <RequiredSwitch @bind-Value="IdentityResource.Required" />
                    </MCol>
                </MRow>
                <div class="mt-6 text-subtitle2">@T("User Claims")</div>    
                <UserClaimSelect @bind-Value=IdentityResource.UserClaims Class="mt-4" Style="height:67%!important" />
            </div>
            <div class="d-flex mt-6">
                <MSwitch @bind-Value="IdentityResource.Enabled" Inset Class="label" Label="@(IdentityResource.Enabled ? T("Enable"):T("Disabled"))" />
                <MSpacer></MSpacer>
                <MButton OnClick="async () => await AddIdentityResourceAsync(context)" Color="primary" Class="small-button ml-6">@T("Submit")</MButton>
            </div>
        </div>
    </MForm>
</SheetDialog>