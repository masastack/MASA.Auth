@page "/sso/apiScope"
@inherits AdminCompontentBase

<DefaultCard>
    <AutoHeight>
        <HeaderContent>
            <div class="d-flex mb-6">
                <SearchTextField @bind-Value="Search" />
                <MSpacer />
                <DefaultButton Small Class="ml-6" OnClick="() => OpenAddApiResourceDialog()">
                    <MIcon Size=18>@IconConstants.Add</MIcon>
                    <span class="ml-2">@T("Add")</span>
                </DefaultButton>
            </div>
        </HeaderContent>
        <AutoHeightContent>
            <DefaultDataTable Headers="Headers" Items="ApiScopes" TItem="ApiScopeDto" ItemsPerPage="PageSize">
                <HeaderColContent Context="header">
                    <span class="font-14-medium">@header.Text</span>
                </HeaderColContent>
                <ItemColContent>
                    @switch (context.Header.Value)
                    {
                        case nameof(ApiScopeDto.Name):
                            <div class="hover-pointer" @onclick="()=> OpenUpdateApiResourceDialog(context.Item)">
                                <span class="text-body3 default--text">@context.Item.Name</span>
                            </div>
                            break;
                        case (nameof(ApiScopeDto.DisplayName)):
                            <span class="font-16 default-regular--text">@context.Item.DisplayName</span>
                            break;
                        case nameof(ApiScopeDto.Required):
                            <span class="font-16 default-regular--text">@(context.Item.Required ? T("Yes") : T("No"))</span>
                            break;
                        case (nameof(ApiScopeDto.Description)):
                            <span class="font-16 default-regular--text">@context.Item.Description</span>
                            break;
                        case nameof(ApiScopeDto.Enabled):
                            <EnableChip Value="@context.Item.Enabled" />
                            break;
                        case "Action":
                            <MIcon Small Color="default-regular" OnClick="()=> OpenUpdateApiResourceDialog(context.Item)">mdi-pencil</MIcon>
                            <MIcon Small Color="default-regular" Class="ml-7" OnClick="()=> OpenRemoveApiScopeDialog(context.Item)">mdi-delete</MIcon>
                            break;
                        default:
                            <span class="text-body3">@context.Value</span>
                            break;
                    }
                </ItemColContent>
            </DefaultDataTable>
        </AutoHeightContent>
        <FooterContent>
            <Pagination Class="mt-5" @bind-Page="Page" @bind-PageSize=PageSize Total=Total />
        </FooterContent>
    </AutoHeight>
</DefaultCard>

<AddApiScopeDialog @bind-Visible="AddApiScopeDialogVisible" OnSubmitSuccess=GetApiScopesAsync />
<UpdateApiScopeDialog @bind-Visible="UpdateApiScopeDialogVisible" ApiScopeId=CurrentApiScopeId OnSubmitSuccess=GetApiScopesAsync />