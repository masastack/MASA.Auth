@page "/sso/apiScope"
@inherits AdminCompontentBase

<PageTitle>
    @T("ApiScope")
</PageTitle>

<DefaultCard>
    <AutoHeight>
        <HeaderContent>
            <div class="d-flex mb-6">
                <SearchTextField @bind-Value="Search" />
                <MSpacer />
                <DefaultButton Small Class="ml-6" OnClick="() => OpenAddApiResourceDialog()">
                    <MIcon Size=18>@IconConstants.Add</MIcon>
                    <span class="ml-2 btn">@T("Add")</span>
                </DefaultButton>
            </div>
        </HeaderContent>
        <AutoHeightContent>
            <DefaultDataTable Headers="Headers" Items="ApiScopes" TItem="ApiScopeDto" ItemsPerPage="PageSize">
                <HeaderColContent Context="header">
                    <span>@header.Text</span>
                </HeaderColContent>
                <ItemColContent>
                    @switch (context.Header.Value)
                    {
                        case nameof(ApiScopeDto.Name):
                            <div class="hover-pointer" @onclick="()=> OpenUpdateApiResourceDialog(context.Item)">
                                <span>@context.Item.Name</span>
                            </div>
                            break;
                        case (nameof(ApiScopeDto.DisplayName)):
                            <span>@context.Item.DisplayName</span>
                            break;
                        case nameof(ApiScopeDto.Required):
                            <span>@(context.Item.Required ? T("Yes") : T("No"))</span>
                            break;
                        case (nameof(ApiScopeDto.Description)):
                            <span>@context.Item.Description</span>
                            break;
                        case nameof(ApiScopeDto.Enabled):
                            <EnableChip Value="@context.Item.Enabled" />
                            break;
                        case "Action":
                            <MIcon Size="20" OnClick="()=> OpenUpdateApiResourceDialog(context.Item)">@IconConstants.Update</MIcon>
                            <MIcon Size="20" Class="ml-6" OnClick="()=> OpenRemoveApiScopeDialog(context.Item)">@IconConstants.Remove</MIcon>
                            break;
                        default:
                            <span>@context.Value</span>
                            break;
                    }
                </ItemColContent>
            </DefaultDataTable>
        </AutoHeightContent>
        <FooterContent>
            <Pagination Class="mt-5" @bind-Page="Page" @bind-PageSize=PageSize Total=Total />
        </FooterContent>
    </AutoHeight>
</DefaultCard>

<AddApiScopeDialog @bind-Visible="AddApiScopeDialogVisible" OnSubmitSuccess=GetApiScopesAsync />
<UpdateApiScopeDialog @bind-Visible="UpdateApiScopeDialogVisible" ApiScopeId=CurrentApiScopeId OnSubmitSuccess=GetApiScopesAsync />