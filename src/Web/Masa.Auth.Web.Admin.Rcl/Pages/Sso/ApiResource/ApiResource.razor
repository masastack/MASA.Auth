@page "/sso/apiResource"
@inherits AdminCompontentBase

<MCard Class="pa-6">
    <div class="d-flex mb-6">
        <DefaultTextField @bind-Value="Search" Color="primary" Class="rounded-2 search" Style="max-width:340px;" Placeholder="@T("Search")" HideDetails="@("auto")" Flat Dense Solo BackgroundColor="fill-lighten-1">
            <PrependInnerContent>
                <MIcon Size=16 Class="mr-2 default-emphasis-secondary--text">mdi-magnify</MIcon>
            </PrependInnerContent>
        </DefaultTextField>
        <MSpacer />
        <MButton Color="primary" Class="ml-6 medium-button" OnClick="() => OpenAddApiResourceDialog()">
            <MIcon Size=18>mdi-plus</MIcon>
            <span class="ml-2">@T("Add")</span>
        </MButton>
    </div>
    <MDataTable Headers="Headers" Items="ApiResources" TItem="ApiResourceDto" ItemsPerPage="PageSize" HideDefaultFooter Class="user table-border-none">
        <HeaderColContent Context="header">
            <span class="text-btn">@header.Text</span>
        </HeaderColContent>
        <ItemColContent>
            @switch (context.Header.Value)
            {
                case nameof(ApiResourceDto.Name):
                    <div class="hover-pointer" @onclick="()=> OpenUpdateApiResourceDialog(context.Item)">
                        <span class="text-body3 default--text">@context.Item.Name</span>
                    </div>
                    break;
                case (nameof(ApiResourceDto.DisplayName)):
                    <span class="font-16 default-regular--text">@context.Item.DisplayName</span>
                    break;
                case (nameof(ApiResourceDto.Description)):
                    <span class="font-16 default-regular--text">@context.Item.Description</span>
                    break;
                case nameof(ApiResourceDto.Enabled):
                    <EnableChip Value="@context.Item.Enabled" />
                    break;
                case "Action":
                    <MIcon Small Color="default-regular" OnClick="()=> OpenUpdateApiResourceDialog(context.Item)">mdi-pencil</MIcon>
                    <MIcon Small Color="default-regular" Class="ml-7" OnClick="()=> OpenRemoveApiResourceDialog(context.Item)">mdi-delete</MIcon>
                    break;
                default:
                    <span class="text-body3">@context.Value</span>
                    break;
            }
        </ItemColContent>
        <FooterContent>
            <DefaultPagination Class="mt-5" @bind-Page="Page" @bind-PageSize=PageSize Total=Total />
        </FooterContent>
    </MDataTable>
</MCard>

<AddApiResourceDialog @bind-Visible="AddApiResourceDialogVisible" OnSubmitSuccess=GetApiResourcesAsync />
<UpdateApiResourceDialog @bind-Visible="UpdateApiResourceDialogVisible" ApiResourceId="CurrentApiResourceId" OnSubmitSuccess=GetApiResourcesAsync />