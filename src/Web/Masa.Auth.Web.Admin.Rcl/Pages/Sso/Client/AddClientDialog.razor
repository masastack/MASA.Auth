@inherits AdminCompontentBase

<SSheetDialog EnableDomReload @bind-Value=_visible Title="@T("Add Client")" ContentClass="px-sheet-dialog full-height">
    <MCard Style="height: calc(100vh - 140px);">
        <MCardText Class="full-height">
            <SElevationTab Dense Class="pt-8 full-height selevationtab" @bind-Tab="_tab" Tabs='_tabs' ItemsClass="mt-8 full-height" ItemsStyle="overflow-y: auto;">
                <SElevationTabItem>
                    <Masa.Auth.Web.Admin.Rcl.Pages.Sso.Client.Section.ClientType @bind-Type="_addClientDto.ClientType" />
                    <MForm Model=_addBasicDto EnableValidation Class="full-width" EnableI18n @ref="_form">
                        <Masa.Auth.Web.Admin.Rcl.Pages.Sso.Client.Section.AddBasics @bind-Dto="_addBasicDto" />
                    </MForm>
                </SElevationTabItem>
                <SElevationTabItem>
                    <Masa.Auth.Web.Admin.Rcl.Pages.Sso.Client.Section.ResourceScopes @bind-Dto="_clientScopesDto" />
                </SElevationTabItem>
            </SElevationTab>
        </MCardText>
        <MCardActions Class="d-flex justify-end">
            <MButton class="rounded-pill primary" MinWidth="100" OnClick="SaveAsync">@T("Submit")</MButton>
        </MCardActions>
    </MCard>
</SSheetDialog>