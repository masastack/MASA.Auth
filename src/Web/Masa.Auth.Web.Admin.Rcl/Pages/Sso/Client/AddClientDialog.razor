@inherits AdminCompontentBase

<SheetDialog Value=Value ValueChanged=ValueChanged Title="@T("Create Client")" ContentClass="px-sheet-dialog">
    <ElevationTab Dense Class="pt-12 full-height" Headers='new List<string>{"Basic","Consent Screen","Authentication","Resource"}' TabWindowClass="mt-8">
        <ElevationTabItem>
            <MCard Class="d-flex flex-column full-height">
                <Masa.Auth.Web.Admin.Rcl.Pages.Sso.Client.Section.ClientType @bind-Type="_addClientDto.ClientType"/>
                <Masa.Auth.Web.Admin.Rcl.Pages.Sso.Client.Section.Basics @bind-Dto="_basicDto"/>
            </MCard>
        </ElevationTabItem>
        <ElevationTabItem>
            <MCard Class="d-flex flex-column full-height">
                <Masa.Auth.Web.Admin.Rcl.Pages.Sso.Client.Section.Consent @bind-Dto="_consentDto"/>
            </MCard>
        </ElevationTabItem>
        <ElevationTabItem>
            <MCard Class="d-flex flex-column full-height">
                <Masa.Auth.Web.Admin.Rcl.Pages.Sso.Client.Section.Authentication @bind-Dto="_authenticationDto"/>
            </MCard>
        </ElevationTabItem>
        <ElevationTabItem>
            <MCard Class="d-flex flex-column full-height">
                <Masa.Auth.Web.Admin.Rcl.Pages.Sso.Client.Section.ResourceScope />
            </MCard>
        </ElevationTabItem>
    </ElevationTab>
    <MButton OnClick="SaveAsync" Style="position:absolute;bottom:48px;">Save</MButton>
</SheetDialog>