@inherits AdminCompontentBase

<MContainer>
    <MRow>
        <MCol Md=6>
            <MCheckbox Dense Label="AllowOfflineAccess"></MCheckbox>
        </MCol>
        <MCol Md=6>
            <DefaultNumberTextField TValue="int" Label="IdentityTokenLifetime" />
        </MCol>
        <MCol Md=6>
            <DefaultNumberTextField TValue="int" Label="AccessTokenLifetime" />
        </MCol>
         <MCol Md=6>
            <MSelect @bind-Value="@value3"
                     Label="AccessTokenType"
                     Outlined Dense
                     Items="@items"
                     ItemText="u => u.Text"
                     ItemValue="u => u.Value">
            </MSelect>  
        </MCol>        
        <MCol Md=6>
            <DefaultNumberTextField TValue="int" Label="AuthorizationCodeLifetime" />
        </MCol>
        <MCol Md=6>
            <DefaultNumberTextField TValue="int" Label="AbsoluteRefreshTokenLifetime" />
        </MCol>
        <MCol Md=6>
            <DefaultNumberTextField TValue="int" Label="SlidingRefreshTokenLifetime" />
        </MCol>
        <MCol Md=6>
            <MSelect @bind-Value="@value3"
                     Label="RefreshTokenUsage"
                     Outlined Dense
                     Items="@items"
                     ItemText="u => u.Text"
                     ItemValue="u => u.Value">
            </MSelect>  
        </MCol> 
        <MCol Md=6>
            <MSelect @bind-Value="@value3"
                     Label="RefreshTokenExpiration"
                     Outlined Dense
                     Items="@items"
                     ItemText="u => u.Text"
                     ItemValue="u => u.Value">
            </MSelect>  
        </MCol> 
        <MCol Md=6>
            <DefaultTextField TValue="string" Label="PairWiseSubjectSalt" />
        </MCol>
        <MCol Md=6>
            <MCheckbox Dense Label="IncludeJwtId"></MCheckbox>
        </MCol>

        <MCol Md=6>
            <MCheckbox Dense Label="UpdateAccessTokenClaimsOnRefresh"></MCheckbox>
        </MCol>
        <MCol Md=6>
            <MCheckbox Dense Label="AlwaysIncludeUserClaimsInIdToken"></MCheckbox>
        </MCol>
        <MCol Md=6>
            <MCheckbox Dense Label="AllowAccessTokensViaBrowser"></MCheckbox>
        </MCol>
         <MCol Md=6>
            <MCheckbox Dense Label="AlwaysSendClientClaims"></MCheckbox>
        </MCol>   
        <MCol Md=12>
            <Claims/>
        </MCol>
    </MRow>
</MContainer>

@code {
    string value3 = "";
    List<SelectItemDto<string>> items = new List<SelectItemDto<string>>();
}
