@page "/sso/userClaim"
@inherits AdminCompontentBase

<DefaultCard>
    <AutoHeight>
        <HeaderContent>
            <div class="d-flex mb-6">
                <SearchTextField @bind-Value="Search" />
                <MSpacer />
                <DefaultButton Small OnClick="() => AddStandardUserClaimsAsync()">
                    <MIcon Size=18>mdi-cog-outline</MIcon>
                    <span class="ml-2 btn">@T("Create standard userClaims")</span>
                </DefaultButton>
                <DefaultButton Small Class="ml-4" OnClick="() => OpenAddApiResourceDialog()">
                    <MIcon Size=18>@IconConstants.Add</MIcon>
                    <span class="ml-2 btn">@T("Add")</span>
                </DefaultButton>
            </div>
        </HeaderContent>
        <AutoHeightContent>
            <DefaultDataTable Headers="Headers" Items="UserClaims" TItem="UserClaimDto" ItemsPerPage="PageSize">
                <HeaderColContent Context="header">
                    <span class="body2 regular3--text">@header.Text</span>
                </HeaderColContent>
                <ItemColContent>
                    @switch (context.Header.Value)
                    {
                        case nameof(UserClaimDto.Name):
                            <div class="hover-pointer" @onclick="()=> OpenUpdateApiResourceDialog(context.Item)">
                                <span class="subtitle emphasis2--text">@context.Item.Name</span>
                            </div>
                            break;
                        case (nameof(UserClaimDto.Description)):
                            <span class="body regular--text">@context.Item.Description</span>
                            break;
                        case nameof(UserClaimDto.UserClaimType):
                            <span class="body regular--text">@T(context.Item.UserClaimType.ToString())</span>
                            break;
                        case "Action":
                            <MIcon Small Color="regular" OnClick="()=> OpenUpdateApiResourceDialog(context.Item)">@IconConstants.Update</MIcon>
                            <MIcon Small Color="regular" Class="ml-7" OnClick="()=> OpenRemoveUserClaimDialog(context.Item)">@IconConstants.Remove</MIcon>
                            break;
                        default:
                            <span class="subtitle">@context.Value</span>
                            break;
                    }
                </ItemColContent>
            </DefaultDataTable>
        </AutoHeightContent>
        <FooterContent>
            <Pagination Class="mt-5" @bind-Page="Page" @bind-PageSize=PageSize Total=Total />
        </FooterContent>
    </AutoHeight>
</DefaultCard>

<AddUserClaimDialog @bind-Visible="AddUserClaimDialogVisible" OnSubmitSuccess=GetUserClaimsAsync />
<UpdateUserClaimDialog @bind-Visible="UpdateUserClaimDialogVisible" UserClaimId=CurrentUserClaimId OnSubmitSuccess=GetUserClaimsAsync />