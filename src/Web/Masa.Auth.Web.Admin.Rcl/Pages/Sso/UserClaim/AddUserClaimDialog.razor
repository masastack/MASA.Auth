@inherits AdminCompontentBase

<DefaultSheetDialog Value="Visible" ValueChanged=UpdateVisible Title="@T("Add UserClaim")">
    <MForm Model=UserClaim EnableValidation @ref="Form">
        <AutoHeight Overflow>
            <AutoHeightContent>
                <DefaultTitle Class="mb-4">@T("Basic Information")</DefaultTitle>
                <DefaultTextField @bind-Value="UserClaim.Name" Label="@T("Name")" Class="mb-12" />
                <MTextarea @bind-Value="UserClaim.Description" Outlined Label="@T("Description")" Class="mb-12" />
            </AutoHeightContent>
            <FooterContent>
                <div class="d-flex mt-6">
                    <MSpacer></MSpacer>
                    <DefaultButton Medium OnClick="async () => await AddUserClaimAsync(context)">@T("Submit")</DefaultButton>
                </div>
            </FooterContent>
        </AutoHeight>
    </MForm>
</DefaultSheetDialog>