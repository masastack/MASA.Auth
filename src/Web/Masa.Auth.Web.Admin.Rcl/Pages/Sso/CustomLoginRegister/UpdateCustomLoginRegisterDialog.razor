@inherits AdminCompontentBase

<DefaultSheetDialog Value="Visible" ValueChanged=UpdateVisible Title="@T("Update Custom Login")">
    <MForm Model=CustomLogin EnableValidation @ref="Form">
        <AutoHeight Overflow>
            <HeaderContent>
                <div class="d-flex">
                    <div class="mx-auto">
                        <SLabeledRadioGroup @bind-Value="Tab" Dense>
                            @foreach (var tab in new List<string> { CustomLoginTab.BasicInformation, CustomLoginTab.Login, CustomLoginTab.Register })
                            {
                                <SLabeledRadio Value="tab" MinWidth=70>
                                    @T(tab)
                                </SLabeledRadio>
                            }
                        </SLabeledRadioGroup>
                    </div>
                </div>
            </HeaderContent>
            <AutoHeightContent>
                <MWindow Value="Tab" Class="full-height">
                    <MWindowItem Value="CustomLoginTab.BasicInformation" Class="my-12">
                        <div class="d-flex mb-12">
                            <MAvatar Class="mx-auto" Size=80>
                                <img src="@CustomLoginDetail.Client.LogoUri" />
                            </MAvatar>
                        </div>
                        <MRow Class="mb-6">
                            <MCol>
                                <STextField @bind-Value="CustomLogin.Name" Label="@T("Name")" />
                            </MCol>
                            <MCol>
                                <STextField @bind-Value="CustomLogin.Title" Label="@T("Title")" />
                            </MCol>
                        </MRow>
                        <MRow>
                            <MCol>
                                <ClientSelect Value="@CustomLoginDetail.Client.ClientId" Disabled />
                            </MCol>
                        </MRow>
                    </MWindowItem>
                    <MWindowItem Value="CustomLoginTab.Login" Class="my-12">
                        <ConfigLogin @bind-Value="CustomLogin.ThirdPartyIdps" Logo="@CustomLoginDetail.Client.LogoUri" Title="@CustomLogin.Title" />
                    </MWindowItem>
                    <MWindowItem Value="CustomLoginTab.Register" Class="my-12">
                        <ConfigRegister @bind-Value="CustomLogin.RegisterFields" Logo="@CustomLoginDetail.Client.LogoUri" Title="@CustomLogin.Title" />
                    </MWindowItem>
                </MWindow>
            </AutoHeightContent>
            <FooterContent>
                <div class="d-flex">
                    <EnableSwitch @bind-Value="CustomLogin.Enabled" />
                    <MSpacer></MSpacer>
                    @if (Tab != CustomLoginTab.BasicInformation)
                    {
                        <SButton Medium OnClick="AddConfig" Class="mr-6">
                            <MIcon Size=18>@IconConstants.Add</MIcon>
                            <span class="ml-2">@T("Add")</span>
                        </SButton>
                    }
                    <SButton Medium OnClick="async () => await UpdateCustomLoginAsync(context.EditContext)">@T("Save")</SButton>
                </div>
            </FooterContent>
        </AutoHeight>
    </MForm>
</DefaultSheetDialog>