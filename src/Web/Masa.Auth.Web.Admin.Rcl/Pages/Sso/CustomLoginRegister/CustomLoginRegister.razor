@page "/sso/customLogin"
@inherits AdminCompontentBase

<PageTitle>
    @T("CustomLogin")
</PageTitle>

<DefaultCard>
    <AutoHeight>
        <HeaderContent>
            <div class="d-flex mb-6">
                <SearchTextField @bind-Value="Search" />
                <MSpacer />
                <DefaultButton Small OnClick="() => OpenAddCustomLoginDialog()">
                    <MIcon Size=18>@IconConstants.Add</MIcon>
                    <span class="ml-2 btn">@T("Add")</span>
                </DefaultButton>
            </div>
        </HeaderContent>
        <AutoHeightContent>
            <DefaultDataTable Headers="Headers" Items="CustomLogins" TItem="CustomLoginDto" ItemsPerPage="PageSize">
                <HeaderColContent Context="header">
                    <span>@header.Text</span>
                </HeaderColContent>
                <ItemColContent>
                    @switch (context.Header.Value)
                    {
                        case nameof(ClientDto.LogoUri):
                            <MAvatar Size=48>
                                <img src="@context.Item.Client.LogoUri" />
                            </MAvatar>
                            break;
                        case nameof(CustomLoginDto.Name):
                            <span>@context.Item.Name</span>
                            break;
                        case (nameof(ClientDto.ClientName)):
                            <span>@context.Item.Client.ClientName</span>
                            break;
                        case (nameof(CustomLoginDto.CreationTime)):
                            <DateTimeTitle Value="@context.Item.CreationTime" />
                            break;
                        case nameof(CustomLoginDto.ModificationTime):
                            <DateTimeTitle Value="@context.Item.ModificationTime" />
                            break;
                        case (nameof(CustomLoginDto.Modifier)):
                            <span>@context.Item.Modifier</span>
                            break;
                        case nameof(CustomLoginDto.Enabled):
                            <EnableChip Value="@context.Item.Enabled" />
                            break;
                        case "Action":
                            <MIcon Small OnClick="()=> OpenUpdateCustomLoginDialog(context.Item)">@IconConstants.Update</MIcon>
                            <MIcon Small Class="ml-7" OnClick="()=> OpenRemoveCustomLoginDialog(context.Item)">@IconConstants.Remove</MIcon>
                            break;
                        default:
                            <span class="subtitle">@context.Value</span>
                            break;
                    }
                </ItemColContent>
            </DefaultDataTable>
        </AutoHeightContent>
        <FooterContent>
            <Pagination Class="mt-5" @bind-Page="Page" @bind-PageSize=PageSize Total=Total />
        </FooterContent>
    </AutoHeight>
</DefaultCard>

<AddCustomLoginRegisterDialog @key="Guid.NewGuid()" @bind-Visible="AddCustomLoginRegisterDialogVisible" OnSubmitSuccess=GetCustomLoginsAsync />
<UpdateCustomLoginRegisterDialog @key="Guid.NewGuid()" @bind-Visible="UpdateCustomLoginRegisterDialogVisible" CustomLoginId="CurrentCustomLoginId" OnSubmitSuccess=GetCustomLoginsAsync />