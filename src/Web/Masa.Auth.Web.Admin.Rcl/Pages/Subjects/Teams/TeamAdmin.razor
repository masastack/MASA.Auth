@inherits AdminCompontentBase

<MCardText>
    <StaffSelect @bind-Value="Value.Staffs" RoleLimit=RoleLimit Class="mb-6" Label="@T("Team Member")" />
    <RoleSelectForTeam @bind-Value="Value.Roles" TeamUserCount=Value.Staffs.Count RoleLimitChanged="value => RoleLimit=value" Class="mb-6" Label="@T("Role")" />
    <div class="global-nav" style="height:auto">
        <PermissionsConfigure Roles=Value.Roles
                              Value="Value.Permissions.Select(permission => permission.Key).ToList()"
                              ValueChanged="value => Value.Permissions=value.ToDictionary(item => item,ItemColProps => true)"
                              Preview=Preview
                              PreviewChanged=PreviewChanged
                              TagIdPrefix="Admin"
                              Style="max-height:calc(100vh - 496px);" />
    </div>
</MCardText>