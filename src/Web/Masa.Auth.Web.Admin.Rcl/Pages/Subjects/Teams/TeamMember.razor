@inherits AdminCompontentBase

<MCardText>
    <StaffSelect IgnoreValue="IgnoreStaffIds" @bind-Value="Value.Staffs" RoleLimit=RoleLimit Class="mb-6" Label="@T("Team Member")" />
    <RoleSelectForTeam @bind-Value="Value.Roles" ScopeItems="ScopeRoles" TeamUserCount=Value.Staffs.Count RoleLimitChanged="value => RoleLimit=value" Class="mb-6" Label="@T("Role")" />
    <div class="global-nav" style="max-height:calc(100vh - 450px);">
        <PermissionExtensionConfigure Roles=Value.Roles
                                      @bind-ExtensionValue="Value.Permissions"
                                      Preview=Preview 
                                      ScopeItems="ScopePermissions"
                                      ScopeRoleItems="ScopeRoles"
                                      PreviewChanged=PreviewChanged
                                      TagIdPrefix="Member" />
    </div>
</MCardText>