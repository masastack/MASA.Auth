@inherits AdminCompontentBase
@page "/team/sheetv2"

<MCard Class="mx-auto" MaxWidth="1200">
    <MCardTitle Class="d-flex justify-center">
        <MButtonGroup Dense Mandatory @bind-Value="_tab" Class="rounded-lg elevation-tab">
            <MButton Value="1">
                @T("Basic information")
            </MButton>
            <MButton Value="2">
                @T("Setup team admins")
            </MButton>
            <MButton Value="3">
                @T("Setup team members")
            </MButton>
        </MButtonGroup>
    </MCardTitle>
    <MWindow @bind-Value="_tab" Reverse>
        <MWindowItem Value="1">
            <TeamBaseinfo @bind-Value="_teamDetailDto.TeamBaseInfo" />
            <MCardActions class="d-flex align-center mb-6">
                <MButton Text Color="error" MinWidth="100" OnClick="()=>{ _teamDetailDto.TeamBaseInfo.Description = _teamDetailDto.TeamBaseInfo.Name; }">
                    @T("Delete")
                </MButton>
                <MSpacer />
                <MButton class="rounded-pill primary" MinWidth="100" Disabled="@string.IsNullOrEmpty(_teamDetailDto.TeamBaseInfo.Name.Trim())">@T("Next step")</MButton>
            </MCardActions>
        </MWindowItem>
        <MWindowItem Value="2">
            <TeamAdmin @bind-Value="_teamDetailDto.TeamAdmin" />
            <MCardActions class="d-flex align-center mb-6">
                <MButton Text Color="error" MinWidth="100">
                    @T("Delete")
                </MButton>
                <MSpacer />
                <MButton class="rounded-pill primary" MinWidth="100">@T("Preview")</MButton>
                <MButton class="rounded-pill primary" MinWidth="100">@T("Next step")</MButton>
            </MCardActions>
        </MWindowItem>
        <MWindowItem Value="3">
            <TeamMember @bind-Value="_teamDetailDto.TeamMember" />
            <MCardActions class="d-flex align-center  mb-6">
                <MButton Text Color="error" MinWidth="100">
                    @T("Delete")
                </MButton>
                <MSpacer />
                <MButton class="rounded-pill primary" MinWidth="100">@T("Preview")</MButton>
                <MButton class="rounded-pill primary" MinWidth="100">@T("Submit")</MButton>
            </MCardActions>
        </MWindowItem>
    </MWindow>
</MCard>

@code {
    TeamDetailDto _teamDetailDto = new TeamDetailDto();
    StringNumber _tab = 1;
}