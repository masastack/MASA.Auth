@page "/thirdPartyIdp"
@inherits AdminCompontentBase

<MCard Class="pa-6">
    <div class="d-flex mb-6">
        <MTextField @bind-Value="Search" Color="primary" Class="rounded-2 search" Style="max-width:340px;" Placeholder="@T("Search")" HideDetails="@("auto")" Flat Dense Solo BackgroundColor="fill-lighten-1">
            <PrependInnerContent>
                <MIcon Size=16 Class="mr-2 neutral-lighten-1--text">mdi-magnify</MIcon>
            </PrependInnerContent>
        </MTextField>
        <MSpacer />
        <MButton Color="primary" Class="ml-6 medium-button" OnClick="() => OpenAddThirdPartyIdpDialog()">
            <MIcon Size=18>mdi-plus</MIcon>
            <span class="ml-2">@T("Add")</span>
        </MButton>
    </div>
    <MDataTable Headers="Headers" Items="ThirdPartyIdps" TItem="ThirdPartyIdpDto" ItemsPerPage="PageSize" HideDefaultFooter Class="user table-border-none">
        <HeaderColContent Context="header">
            <span class="text-btn">@header.Text</span>
        </HeaderColContent>
        <ItemColContent>
            @switch (context.Header.Value)
            {
                case nameof(ThirdPartyIdpDto.Icon):
                    <MAvatar Size="20">
                        <img src="@context.Item.Icon" />
                    </MAvatar>
                    break;
                case nameof(ThirdPartyIdpDto.Name):
                    <div class="hover-pointer" @onclick="()=> OpenUpdateThirdPartyIdpDialog(context.Item)">
                        <span class="text-body3 neutral--text">@context.Item.Name</span>
                    </div>
                    break;
                case (nameof(ThirdPartyIdpDto.DisplayName)):
                    <span class="text-body4 neutral-lighten-2--text">@context.Item.DisplayName</span>
                    break;
                case nameof(ThirdPartyIdpDto.VerifyType):
                    <span class="text-body4 neutral-lighten-2--text">@T(context.Item.VerifyType.ToString())</span>
                    break;
                case nameof(ThirdPartyIdpDto.CreationTime):
                    <span class="text-body4 neutral-lighten-2--text">@context.Item.CreationTime.ToString(T("$DateTimeFormat"))</span>
                    break;
                case nameof(ThirdPartyIdpDto.Url):
                    <span class="text-body4 neutral-lighten-2--text">@context.Item.Url</span>
                    break;
                case "Action":
                    <MIcon Small Color="neutral-lighten-2" OnClick="()=> OpenUpdateThirdPartyIdpDialog(context.Item)">mdi-pencil</MIcon>
                    <MIcon Small Color="neutral-lighten-2" Class="ml-7" OnClick="()=> OpenRemoveThirdPartyIdpDialog(context.Item)">mdi-delete</MIcon>
                    break;
                default:
                    <span class="text-body3">@context.Value</span>
                    break;
            }
        </ItemColContent>
        <FooterContent>
            <Pagination Class="mt-5" @bind-Page="Page" @bind-PageSize=PageSize Total=Total />
        </FooterContent>
    </MDataTable>
</MCard>


<AddThirdPartyIdpDialog @bind-Visible="AddThirdPartyIdpDialogVisible" OnSubmitSuccess=GetThirdPartyIdpsAsync />
<UpdateThirdPartyIdpDialog ThirdPartyIdpId=CurrentThirdPartyIdpId @bind-Visible="UpdateThirdPartyIdpDialogVisible" OnSubmitSuccess=GetThirdPartyIdpsAsync />