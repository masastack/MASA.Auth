@inherits AdminCompontentBase

<MDialog Value="Visible" ValueChanged=UpdateVisible Width="800">
    <MForm Model=User EnableDataAnnotationsValidation>
        <MStepper Value="Step">
            <MStepperItems>
                <MStepperContent Step="1">
                    <div style="height:300px" class="d-flex">
                        <div class="ma-auto text-center">
                            <MButtonGroup @bind-Value="Gender" Rounded>
                                <MButton Width=100 Value="@("Male")" Class="@(Gender == "Male"?"button-group-active":"button-group")">
                                    <MIcon Size=18>fa fa-regular fa-mars</MIcon>
                                    <span class="ml-1">@T("Male")</span>
                                </MButton>
                                <MButton Width=100 Value="@("Female")" Class="@(Gender == "Female"?"button-group-active":"button-group")">
                                    <MIcon Size=18>fa fa-regular fa-venus</MIcon>
                                    <span class="ml-1">@T("Female")</span>
                                </MButton>
                            </MButtonGroup>
                            <br />
                            <MAvatar Size=120 Class="mt-12">
                                <img src="/_content/Masa.Auth.Web.Admin.Rcl/img/subject/user.svg" />
                            </MAvatar>
                            <br />
                            <div class="mt-3 hover-pointer text-body4">
                                <MIcon Size=18>mdi-autorenew</MIcon><span class="ml-3">@T("Another")</span>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex">
                        <MSpacer></MSpacer>
                        <MButton Color="primary" OnClick="()=>Step=2">@T("Next step")</MButton>
                    </div>
                </MStepperContent>
                <MStepperContent Step="2">
                    <div class="d-flex">
                        <div class="mt-10 ml-auto mr-auto text-center" style="width:212px;">
                            <MAvatar Size=80>
                                <img src="/_content/Masa.Auth.Web.Admin.Rcl/img/subject/user.svg" />
                            </MAvatar>
                            <MTextField @bind-Value="User.DisplayName" Class="mt-0" HideDetails="@("auto")" Placeholder="@T("Give him a nickname!")" />
                        </div>
                    </div>
                    <div class="md-10">
                        <div class="mt-9">@T("Basic Information")</div>
                        <MTextField @bind-Value="User.Name" Class="my-4" Label="@T("Email")" HideDetails="@("auto")" Outlined />
                        <MTextField @bind-Value="User.PhoneNumber" Class="my-4" Label="@T("PhoneNumber")" HideDetails="@("auto")" Outlined />
                        <MTextField @bind-Value="User.Email" Class="my-4" Label="@T("Email")" HideDetails="@("auto")" Outlined />
                        <MTextField @bind-Value="User.IDCard" Class="my-4" Label="@T("IDCard")" HideDetails="@("auto")" Outlined />
                        <div class="mt-6">@T("Detail Information")</div>
                        <MTextField @bind-Value="User.CompanyName" Class="my-4" Label="@T("Email")" HideDetails="@("auto")" Outlined />
                        <MTextField @bind-Value="User.Address.Address" Class="my-4" Label="@T("PhoneNumber")" HideDetails="@("auto")" Outlined />
                        <MTextField @bind-Value="User.Account" Class="my-4" Label="@T("Email")" HideDetails="@("auto")" Outlined />
                        <MTextField @bind-Value="User.Account" Class="my-4" Label="@T("IDCard")" HideDetails="@("auto")" Outlined />
                    </div>
                    <div class="d-flex">
                        <MSpacer></MSpacer>
                        <MButton OnClick="()=>Step=1" Text>@T("Prev step")</MButton>
                        <MButton Color="primary" OnClick="()=>Step=3">@T("Next step")</MButton>
                    </div>
                </MStepperContent>
                <MStepperContent Step="3">
                    <GlobalNavigationDialog />
                    <MButton OnClick="()=>Step=2" Text>@T("Prev step")</MButton>
                </MStepperContent>
            </MStepperItems>
        </MStepper>
    </MForm>
</MDialog>