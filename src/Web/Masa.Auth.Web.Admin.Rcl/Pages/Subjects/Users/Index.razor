@page "/user"
@inherits AdminCompontentBase

<PageTitle>
    @T(Title)
</PageTitle>

<DefaultCard> @*TabIndexChanged="value => Title = Tas[value.ToInt32()]"*@
    <ElevationTab Class="defaultTab full-height" TabMinWidth="120" Left Tabs="Tas" Dense>
        <ElevationTabItem>
            <User />
        </ElevationTabItem>
        <ElevationTabItem>
            <ThirdPartyUser />
        </ElevationTabItem>
        <ElevationTabItem>
            <Staff />
        </ElevationTabItem>
    </ElevationTab>
</DefaultCard>

@code {
    public string Title { get; set; } = PageTab.User;

    List<string> Tas { get; set; } = new();

    protected override void OnInitialized()
    {
        Tas = new() { T(PageTab.User), T(PageTab.ThirdPartyUser), T(PageTab.Staff) };
    }
}