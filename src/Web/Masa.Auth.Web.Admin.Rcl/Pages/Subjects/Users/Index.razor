@page "/user"
@inherits AdminCompontentBase

<PageTitle>
    @T(Title)
</PageTitle>

<DefaultCard>
    <SElevationTab Class="defaultTab full-height" TabMinWidth="120" Left Tabs="Tas" Dense>
        <SElevationTabItem>
            <User @ref=UserRef StaffCompontent=StaffRef ThirdPartyUserCompontent=ThirdPartyUserRef />          
        </SElevationTabItem>
        <SElevationTabItem>
            <ThirdPartyUser @ref=ThirdPartyUserRef />          
        </SElevationTabItem>
        <SElevationTabItem>
            <Staff @ref=StaffRef UserCompontent=UserRef />         
        </SElevationTabItem>
    </SElevationTab>
</DefaultCard>

@code {
    public string Title { get; set; } = PageTab.User;

    List<string> Tas => new() { T(PageTab.User), T(PageTab.ThirdPartyUser), T(PageTab.Staff) };

    User? UserRef { get; set; }

    Staff? StaffRef { get; set; }

    ThirdPartyUser? ThirdPartyUserRef { get; set; }
}