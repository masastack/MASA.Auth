@inherits AdminCompontentBase

<SheetDialog Value="Visible" ValueChanged=UpdateVisible Title="@T("Add User")">
    <MForm Model=User EnableValidation>
        <MStepper Value="Step">
            <MStepperItems>
                <MStepperContent Step="1">
                    <div style="height: 98vh;" class="full-height">
                        <div style="height:300px" class="d-flex">
                            <div class="ma-auto text-center">
                                <MButtonGroup @bind-Value="Gender" Rounded>
                                    <MButton Width=100 Value="@("Male")" Class="@(Gender == "Male"?"button-group-active":"button-group")">
                                        <MIcon Size=18>fa fa-regular fa-mars</MIcon>
                                        <span class="ml-1">@T("Male")</span>
                                    </MButton>
                                    <MButton Width=100 Value="@("Female")" Class="@(Gender == "Female"?"button-group-active":"button-group")">
                                        <MIcon Size=18>fa fa-regular fa-venus</MIcon>
                                        <span class="ml-1">@T("Female")</span>
                                    </MButton>
                                </MButtonGroup>
                                <br />
                                <MAvatar Size=120 Class="mt-12">
                                    <img src="/_content/Masa.Auth.Web.Admin.Rcl/img/subject/user.svg" />
                                </MAvatar>
                                <br />
                                <div class="mt-3 hover-pointer text-body4">
                                    <MIcon Size=18>mdi-autorenew</MIcon><span class="ml-3">@T("Another")</span>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex" style="bottom:48px;right:24px;position:absolute">
                            <MSpacer></MSpacer>
                            <MButton Color="primary" Class="small-button" OnClick="()=>Step=2">@T("Next step")</MButton>
                        </div>
                    </div>
                </MStepperContent>
                <MStepperContent Step="2">
                    <div class="d-flex">
                        <div class="mt-10 ml-auto mr-auto text-center" style="width:212px;">
                            <MAvatar Size=80>
                                <img src="/_content/Masa.Auth.Web.Admin.Rcl/img/subject/user.svg" />
                            </MAvatar>
                            <MTextField @bind-Value="User.DisplayName" Class="mt-0" HideDetails="@("auto")" Placeholder="@T("Give him a nickname!")" />
                        </div>
                    </div>
                    <div class="md-10">
                        <div class="mt-9">@T("Basic Information")</div>
                        <MTextField @bind-Value="User.Name" Class="my-4" Label="@T("Name")" HideDetails="@("auto")" Outlined />
                        <MTextField @bind-Value="User.PhoneNumber" Class="my-10" Label="@T("PhoneNumber")" HideDetails="@("auto")" Outlined />
                        <MTextField @bind-Value="User.Email" Class="my-10" Label="@T("Email")" HideDetails="@("auto")" Outlined />
                        <MTextField @bind-Value="User.IdCard" Class="my-10" Label="@T("IdCard")" HideDetails="@("auto")" Outlined />
                        <MTextField @bind-Value="User.Account" Class="my-10" Label="@T("Account")" HideDetails="@("auto")" Outlined />
                        <MTextField @bind-Value="User.Password" Class="my-10" Label="@T("Password")" HideDetails="@("auto")" Outlined />
                        @if (Fill is false)
                        {
                            <div @onclick="() => Fill = true" class="mt-11 hover-pointer" style="text-align:center">
                                <MIcon>mdi-menu-down</MIcon>
                                <span>@T("Fill in more")</span>
                            </div>
                        }
                        else
                        {
                            <div class="mt-12">@T("Detail Information")</div>
                            <MTextField @bind-Value="User.CompanyName" Class="my-4" Label="@T("CompanyName")" HideDetails="@("auto")" Outlined />
                            <MTextField @bind-Value="User.Address.Address" Class="my-10" Label="@T("Address")" HideDetails="@("auto")" Outlined />
                            <MTextField @bind-Value="User.Department" Class="my-10" Label="@T("Department")" HideDetails="@("auto")" Outlined />
                            <MTextField @bind-Value="User.Position" Class="my-10" Label="@T("Position")" HideDetails="@("auto")" Outlined />
                        }

                    </div>
                    <div class="d-flex">
                        <MSpacer></MSpacer>
                        <MButton Outlined Color="primary" Class="small-button" OnClick="()=>Step=1" Text>@T("Previous step")</MButton>
                        <MButton Color="primary" Class="small-button ml-6" OnClick="()=>Step=3">@T("Next step")</MButton>
                        <MButton OnClick="async () => await AddUserAsync(context)" Color="primary" Class="small-button ml-6" Text>@T("Submit")</MButton>
                    </div>
                </MStepperContent>
                <MStepperContent Step="3">
                    <GlobalNavigationDialog />
                    <MButton OnClick="()=>Step=2" Text>@T("Previous step")</MButton>
                    <MButton Text>@T("Preview")</MButton>
                    <MButton OnClick="async () => await AddUserAsync(context)" Text>@T("Submit")</MButton>
                </MStepperContent>
            </MStepperItems>
        </MStepper>
    </MForm>
</SheetDialog>