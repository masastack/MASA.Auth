@inherits AdminCompontentBase

<DefaultSheetDialog Value="Visible" ValueChanged=UpdateVisible Title="@T("Update User")">
    <MForm Model=User EnableValidation @ref="Form">
        <AutoHeight Overflow AutoClass="mt-6">
            <HeaderContent>
                <div class="d-flex">
                    <div class="mx-auto text-center">
                        <DefaultUploadImage Size="80" @bind-Value="User.Avatar" WhenFileChangeUpload />
                        <PlaceholderTextFiled @bind-Value="User.DisplayName" Placeholder="@T("Give him a nickname!")" />
                    </div>
                </div>
            </HeaderContent>
            <AutoHeightContent>
                <div class="subtitle2 regular--text">@T("Basic Information")</div>
                <div Class="mt-4">
                    <ButtonGroup @bind-Value="User.Gender" TValue="GenderTypes" />
                </div>
                <MRow Class="mt-6">
                    <MCol>
                        <DefaultTextField @bind-Value="User.Name" Label="@T("Name")" />
                    </MCol>
                    <MCol>
                        <DefaultTextField @bind-Value="User.PhoneNumber" Label="@T("PhoneNumber")" />
                    </MCol>
                </MRow>
                <MRow Class="mt-1">
                    <MCol>
                        <DefaultTextField @bind-Value="User.CompanyName" Label="@T("CompanyName")" />
                    </MCol>
                    <MCol>
                        <DefaultTextField @bind-Value="User.Email" Label="@T("Email")" />
                    </MCol>
                </MRow>
                <MRow Class="mt-1">
                    <MCol>
                        <DefaultTextField Readonly Value="UserDetail.Account" Label="@T("Account")" />
                    </MCol>
                    <MCol>
                        <CopyPassword @bind-Value="User.Password" />
                    </MCol>
                </MRow>
                <div class="mt-6 subtitle2 regular--text">@T("Detail Information")</div>
                <MRow Class="mt-1">
                    <MCol>
                        <DefaultTextField @bind-Value="User.IdCard" Label="@T("IdCard")" />
                    </MCol>
                    <MCol>
                        <DefaultTextField @bind-Value="User.Address.Address" Label="@T("Address")" />
                    </MCol>
                </MRow>
                <MRow Class="mt-1">
                    <MCol>
                        <DefaultTextField @bind-Value="User.Department" Label="@T("Department")" />
                    </MCol>
                    <MCol>
                        <DefaultTextField @bind-Value="User.Position" Label="@T("Position")" />
                    </MCol>
                </MRow>
                <Authorization Avatars=UserDetail.ThirdPartyIdpAvatars />
                <Record Creator="@UserDetail.Creator" CreationTime="@UserDetail.CreationTime" Modifier="@UserDetail.Modifier" ModificationTime="@UserDetail.ModificationTime" />
            </AutoHeightContent>
            <FooterContent>
                 <div class="d-flex mt-6">
                    <EnableSwitch @bind-Value="User.Enabled" />
                    <MSpacer></MSpacer>
                    <MButton Class="mr-6" Text Color="error" OnClick=OpenRemoveUserDialog>@T("Delete User")</MButton>
                    <MButton Color="primary" Class="small-button" OnClick="async() => await UpdateUserAsync(context)">@T("Save")</MButton>
                </div>
            </FooterContent>
        </AutoHeight>
    </MForm>
</DefaultSheetDialog>