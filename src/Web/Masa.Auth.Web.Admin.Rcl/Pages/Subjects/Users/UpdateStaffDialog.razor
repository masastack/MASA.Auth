@inherits AdminCompontentBase

<DefaultSheetDialog Value="Visible" ValueChanged=UpdateVisible Title="@T("Update Staff")">
    <MForm Model="Staff" EnableValidation @ref="Form">
        <AutoHeight Overflow AutoClass="mt-6">
            <HeaderContent>
                <div class="d-flex">
                    <div class="mx-auto text-center">
                        <DefaultUploadImage @bind-Value="Staff.User.Avatar" WhenFileChangeUpload />
                        <MTextField @bind-Value="Staff.User.DisplayName" Class="mt-0 mx-auto" HideDetails="@("auto")" Placeholder="@T("Give him a nickname!")" />
                    </div>
                </div>
            </HeaderContent>
            <AutoHeightContent>
                <div class="font-14-bold">@T("Basic Information")</div>
                <div Class="mt-4">
                    <ButtonGroup @bind-Value="Staff.User.Gender" TValue="GenderTypes" />
                </div>
                <MRow Class="mt-6">
                    <MCol>
                        <DefaultTextField @bind-Value="Staff.User.Name" Label="@T("Name")" />
                    </MCol>
                    <MCol>
                        <DefaultTextField @bind-Value="Staff.User.PhoneNumber" Label="@T("PhoneNumber")" />
                    </MCol>
                </MRow>
                <MRow Class="mt-1">
                    <MCol>
                        <DefaultTextField @bind-Value="Staff.User.Email" Label="@T("Email")" />
                    </MCol>
                    <MCol>
                        <EnumSelect @bind-Value=Staff.StaffType TValue="StaffTypes" Label="@T("StaffType")" />
                    </MCol>
                </MRow>
                <MRow Class="mt-1">
                    <MCol>
                        <TeamSelect @bind-Value="Staff.Teams" />
                    </MCol>
                    <MCol>
                        <DefaultTextField @bind-Value="Staff.User.IdCard" Label="@T("IdCard")" />
                    </MCol>
                </MRow>
                <MRow Class="mt-1">
                    <MCol>
                        <DefaultTextField @bind-Value="Staff.User.Address.Address" Label="@T("Address")" />
                    </MCol>
                    <MCol>
                        <DepartmentSelect @bind-Value="Staff.DepartmentId" />
                    </MCol>
                </MRow>
                <MRow Class="mt-1">
                    <MCol>
                        <DefaultTextField @bind-Value="Staff.JobNumber" Label="@T("JobNumber")" />
                    </MCol>
                    <MCol>
                        <DefaultTextField @bind-Value="Staff.Position" Label="@T("Position")" />
                    </MCol>
                </MRow>
                <MRow Class="mt-1">
                    <MCol>
                        <DefaultTextField Value="StaffDetail.User.Account" Readonly Label="@T("Account")" />
                    </MCol>
                    <MCol>
                        <CopyPassword @bind-Value="Staff.User.Password" />
                    </MCol>
                </MRow>

                <Authorization Avatars=StaffDetail.User.ThirdPartyIdpAvatars />
                <Record Creator="@StaffDetail.User.Creator" CreationTime="@StaffDetail.User.CreationTime" Modifier="@StaffDetail.User.Modifier" ModificationTime="@StaffDetail.User.ModificationTime" />
            </AutoHeightContent>
            <FooterContent>
                <div class="d-flex mt-6">
                    <EnableSwitch @bind-Value="Staff.Enabled" />
                    <MSpacer></MSpacer>
                    <DefaultButton Medium Class="mr-6" Color="error" OnClick=OpenRemoveStaffDialog>@T("Delete Staff")</DefaultButton>
                    <DefaultButton Medium OnClick="async () => await UpdateStaffAsync(context)">@T("Save")</DefaultButton>
                </div>
            </FooterContent>
            </AutoHeight>
    </MForm>
</DefaultSheetDialog>