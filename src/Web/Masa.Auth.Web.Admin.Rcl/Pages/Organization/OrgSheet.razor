@page "/org/sheet"

<PageTitle>新增部门</PageTitle>

<MCard Class="mx-auto" MaxWidth="1200">
    <MWindow @bind-Value="_step">
        <MWindowItem Value="1">
            <MCardText>
                <MTextField class="mx-auto text-h5" style="width:120px;" HideDetails="@("auto")" Placeholder="输入部门名称" TValue="string"></MTextField>
                <MRadio Label="迁移原部门人员" class="mt-12 e-flex justify-center" Color="secondary" Value="_migrationStaff">
                    <LabelContent>
                        <span class="secondary--text">
                            迁移原部门人员
                        </span>
                    </LabelContent>
                </MRadio>
                <div class="text-right mt-12 mb-7">
                    <MButton class="rounded-pill primary" MinWidth="100" OnClick="()=>_step = 2">下一步</MButton>
                </div>
            </MCardText>
        </MWindowItem>
        <MWindowItem Value="2">
            <MCardText>
                <MTextField class="mx-auto text-h5 .neutral-lighten-4--text" HideDetails="@("auto")" style="width:120px;" Placeholder="输入部门名称" TValue="string"></MTextField>
                <MCascader Items="_departments" Dense class="mt-6"
                           ItemText="u => u.Name"
                           ItemValue="u => u.Id"
                           ItemChildren="u => u.Children">
                </MCascader>
                <div class="d-flex align-center mt-6">
                    <span class="text-h5 neutral-lighten-1--text">成员</span>
                    <MSpacer />
                    <MTextField Outlined TValue="string" style="width:340px;"
                                Clearable PrependInnerIcon="mdi-magnify" HideDetails="true"
                                Label="搜索成员" Dense Type="text">
                    </MTextField>
                </div>
                <MRow class="mt-6" style="height:300px;overflow-y:scroll;">
                    @for (int i = 0; i < 50; i++)
                    {
                        <MCol Md="3">
                            <MHover Context="hoverComtext">
                                <MListItem @attributes="hoverComtext.Attrs" class="px-4" Ripple=false>
                                    <MListItemAvatar  MinHeight=40 MinWidth=40 Height=40 Width=40>
                                        <img src="https://cdn.masastack.com/stack/images/website/masa-blazor/lists/3.png"/>
                                    </MListItemAvatar>
                                    <MListItemContent class="py-1">
                                        <MListItemTitle class="text-body3 neutral-lighten-1--text">鬼谷子</MListItemTitle>
                                        <MListItemSubtitle class="text-body2 neutral-lighten-3--text">谷首道<MDivider Vertical /> 12412489245364</MListItemSubtitle>
                                    </MListItemContent>
                                    <div style="@(hoverComtext.Hover?"display:flex":"display:none")" class="align-center">
                                        <MIcon Size="24">mdi-close</MIcon>
                                    </div>
                                </MListItem>
                            </MHover>
                        </MCol>
                    }
                </MRow>
                <MTextarea class="mt-6" Label="描述说明" Placeholder="请输入" Outlined Height="120" NoResize>
                </MTextarea>
                <div class="d-flex justify-space-between align-center">
                    <MSwitch @bind-Value="_enabled" Inset Label="正常"></MSwitch>
                    <MButton class="rounded-pill primary mt-4" MinWidth="100">提交</MButton>
                </div>
            </MCardText>
        </MWindowItem>
    </MWindow>
</MCard>

